---
import Layout from '../../layouts/Layout.astro'
import ServiciosData from '../../data/serviciosData.json'
import Servicio from '../../components/Servicios/Servicio.astro'
import imageAlberca from '@assets/phone/Alberca.jpg'
import imageGimnasio from '@assets/phone/Gimnasio.jpg'
import imageHabitacion from '@assets/phone/Habitacion.jpg'
import imageJardin from '@assets/phone/Jardin.jpg'
import imageRestaurante from '@assets/phone/Restaurante.jpg'
import imageSalon from '@assets/phone/Salon.jpg'
import imageSauna from '@assets/phone/Sauna.jpg'
import imageTemazcal from '@assets/phone/Temazcal.jpg'

const images = []

export async function getStaticPaths() {
  return ServiciosData.servicio.flatMap(({ titulo, descripcion }) => {
    return [
      {
        params: { servicio: titulo },
        props: { descripcion },
      },
    ]
  })
}
const { servicio } = Astro.params
const { descripcion } = Astro.props
const title = servicio + ' - Servicio proporcionado por el Hotel del Angel'

const verifyService = () => {
  if (servicio === 'Alberca') {
    images.push(imageAlberca)
    images.push(imageAlberca)
  }
  if (servicio === 'Gimnasio') {
    images.push(imageGimnasio)
    images.push(imageGimnasio)
  }
  if (servicio === 'Habitacion') {
    images.push(imageHabitacion)
    images.push(imageHabitacion)
  }
  if (servicio === 'Jardin') {
    images.push(imageJardin)
    images.push(imageJardin)
  }
  if (servicio === 'Restaurante') {
    images.push(imageRestaurante)
    images.push(imageRestaurante)
  }
  if (servicio === 'Salon') {
    images.push(imageSalon)
    images.push(imageSalon)
  }
  if (servicio === 'Sauna') {
    images.push(imageSauna)
    images.push(imageSauna)
  }
  if (servicio === 'Temazcal') {
    images.push(imageTemazcal)
    images.push(imageTemazcal)
  }
}

verifyService()
---

<Layout
  title={title}
  descripcion="Explora nuestros servicios de lujo en Hotel del Ángel: Alberca, GYM, Restaurante, Salón, Temazcal y Jardín."
>
  <section class="secondBGColor">
    <Servicio
      transition:persist
      title={servicio}
      description={descripcion}
      images={images}
    />
  </section>
</Layout>
