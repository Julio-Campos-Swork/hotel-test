---
import Icon from 'astro-icon'
import ImagenWebp from '@components/ImagenWebp.astro'

const { title, description, images } = Astro.props
---

<hr class="border-white" />
<div class="grid grid-cols-3">
  <div class="col-start-1 ml-4 md:m-10 mt-5">
    <div class="tooltip" id="backBtnS">
      <Icon
        name="mdi:arrow-left"
        width="50"
        color="white"
        class="cursor-pointer"
      />
      <div class="tooltip-text">Volver</div>
    </div>
  </div>
  <div class="col-start-2">
    <h1 class="text-white text-center text-2xl md:text-4xl pt-10 subTitleFont">
      {title}
    </h1>
  </div>
</div>
<hr class="border-white" />

<div
  class="grid grid-cols-1 md:grid-cols-3 grid-rows-1 gap-4 p-3 justify-items-center"
>
  <div
    class="max-w-md max-h-md box transition-transform duration-300 ease-in-out hover:scale-105"
  >
    <ImagenWebp
      imageWebp={images[0]}
      imageJPG={images[0]}
      imageName={title}
      clase="h-full w-full"
    />
  </div>
  <div
    class="max-w-md max-h-md box transition-transform duration-300 ease-in-out hover:scale-105"
  >
    <ImagenWebp
      imageWebp=""
      imageJPG={images[0]}
      imageName={title}
      clase="h-full w-full"
    />
  </div>
  <div
    class="max-w-md max-h-md box transition-transform duration-300 ease-in-out hover:scale-105"
  >
    <ImagenWebp
      imageWebp=""
      imageJPG={images[0]}
      imageName={title}
      clase="h-full w-full"
    />
  </div>
</div>
<div class="flex flex-col justify-center p-6 md:p-12">
  <p class="text-center text-white text-4xl pb-8">Descripcion</p>

  <p class="text-center text-white text-xl">{description}</p>
</div>
<div class="flex flex-col items-center pb-6">
  <a
    href="https://bookings.travelclick.com/105841#/guestsandrooms"
    target="_blank"
  >
    <button class="botonInfo">Reservar</button>
  </a>
</div>

<script is:inline>
  document.getElementById('backBtnS').addEventListener('click', goBack)
  function goBack() {
    window.history.back()
  }
</script>
